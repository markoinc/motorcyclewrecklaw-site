---
import BaseLayout from '../layouts/BaseLayout.astro';
import { states, getUniversalHelmetStates, getLaneSplittingStates } from '../data/states';

const title = "Motorcycle Accident Lawyers - Free Case Evaluation";
const description = "Injured in a motorcycle accident? Get a free case evaluation from experienced motorcycle accident attorneys. No fees unless you win. Available 24/7 nationwide.";

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Motorcycle Wreck Law",
  "url": "https://motorcyclewrecklaw.com",
  "description": description,
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://motorcyclewrecklaw.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

// Featured states (highest motorcycle fatalities)
const featuredStates = states.filter(s => 
  ["california", "texas", "florida", "pennsylvania", "ohio", "new-york"].includes(s.slug)
);

const laneSplittingStates = getLaneSplittingStates();
