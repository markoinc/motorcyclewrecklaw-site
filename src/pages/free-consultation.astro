---
import BaseLayout from '../layouts/BaseLayout.astro';
import { states } from '../data/states';

const title = "Free Motorcycle Accident Consultation - No Fees Unless You Win";
const description = "Get a free, no-obligation case evaluation from experienced motorcycle accident attorneys. Available 24/7. Nationwide coverage. No fees unless you win your case.";

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  "name": "Motorcycle Wreck Law Free Consultation",
  "description": description,
  "url": "https://motorcyclewrecklaw.com/free-consultation",
  "priceRange": "Free Consultation",
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  }
};

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Free Consultation", url: "/free-consultation" }
];
---

<BaseLayout 
  title={title} 
  description={description}
  schemaMarkup={schemaMarkup}
  breadcrumbs={breadcrumbs}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 md:py-20">
    <div class="container-wide">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 bg-green-500/20 text-green-300 px-4 py-2 rounded-full text-sm font-medium mb-6">
            <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
            Free Consultations Available Now
          </div>
          
          <h1 class="text-4xl md:text-5xl font-extrabold mb-6">
            Free Motorcycle Accident 
            <span class="text-primary-400">Case Evaluation</span>
          </h1>
          
          <p class="text-xl text-gray-300 mb-8">
            Find out what your case is worth. Our network of experienced motorcycle accident attorneys 
            will review your case at no cost and with no obligation.
          </p>

          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>100% Free - No hidden costs</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>No Fees Unless You Win</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>24/7 Availability</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Response Within 24 Hours</span>
            </div>
          </div>
        </div>

        <!-- Main Form -->
        <div class="bg-white rounded-2xl shadow-2xl p-6 md:p-8" id="consultation-form">
          <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Start Your Free Evaluation</h2>
            <p class="text-gray-600">Fill out this form and we'll contact you within 24 hours</p>
          </div>
          
          <form action="https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead" method="POST" class="space-y-4">
            <input type="hidden" name="source" value="motorcyclewrecklaw-consultation" />
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">First Name *</label>
                <input type="text" name="firstName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Last Name *</label>
                <input type="text" name="lastName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number *</label>
              <input type="tel" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email Address *</label>
              <input type="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">State Where Accident Occurred *</label>
              <select name="state" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required>
                <option value="">Select State</option>
                {states.map(state => (
                  <option value={state.slug}>{state.name}</option>
                ))}
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">When Did the Accident Happen?</label>
              <select name="accidentDate" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white">
                <option value="">Select Timeframe</option>
                <option value="today">Today</option>
                <option value="this-week">This Week</option>
                <option value="this-month">This Month</option>
                <option value="1-3-months">1-3 Months Ago</option>
                <option value="3-6-months">3-6 Months Ago</option>
                <option value="6-12-months">6-12 Months Ago</option>
                <option value="over-1-year">Over 1 Year Ago</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Describe What Happened *</label>
              <textarea name="description" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 resize-none" placeholder="Please describe your accident and injuries..." required></textarea>
            </div>
            <button type="submit" class="w-full btn btn-cta text-lg py-4">
              Get My Free Evaluation ‚Üí
            </button>
          </form>
          
          <p class="text-xs text-gray-500 text-center mt-4">
            üîí Your information is 100% confidential. By submitting, you agree to our <a href="/privacy-policy" class="underline">Privacy Policy</a>.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What Happens Next -->
  <section class="py-16 bg-gray-50">
    <div class="container-wide">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">What Happens After You Submit?</h2>
      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl font-bold text-primary-600">1</div>
          <h3 class="font-bold text-gray-900 mb-2">We Review Your Case</h3>
          <p class="text-gray-600 text-sm">Our team reviews your information to understand your situation.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl font-bold text-primary-600">2</div>
          <h3 class="font-bold text-gray-900 mb-2">Attorney Match</h3>
          <p class="text-gray-600 text-sm">We match you with an experienced motorcycle accident attorney in your area.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl font-bold text-primary-600">3</div>
          <h3 class="font-bold text-gray-900 mb-2">Free Consultation</h3>
          <p class="text-gray-600 text-sm">The attorney contacts you within 24 hours for a free, no-obligation consultation.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl font-bold text-primary-600">4</div>
          <h3 class="font-bold text-gray-900 mb-2">Your Decision</h3>
          <p class="text-gray-600 text-sm">You decide if you want to proceed. No pressure, no obligation.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Signals -->
  <section class="py-16">
    <div class="container-wide">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-xl shadow-lg text-center">
          <div class="text-4xl mb-4">‚öñÔ∏è</div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Experienced Attorneys</h3>
          <p class="text-gray-600">We only work with attorneys who specialize in motorcycle accident cases.</p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg text-center">
          <div class="text-4xl mb-4">üí∞</div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">No Win, No Fee</h3>
          <p class="text-gray-600">Our attorneys work on contingency. You pay nothing unless they win your case.</p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg text-center">
          <div class="text-4xl mb-4">üèçÔ∏è</div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Rider Advocates</h3>
          <p class="text-gray-600">Attorneys who understand motorcycle law and fight the bias against riders.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Phone CTA -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="container-wide text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Prefer to Talk to Someone Now?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Our team is available 24/7 to answer your questions and start your free case evaluation.
      </p>
      </div>
  </section>
</BaseLayout>
