---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { states, getStateBySlug, type StateData } from '../../data/states';

export function getStaticPaths() {
  return states.map((state) => ({
    params: { state: state.slug },
    props: { stateData: state },
  }));
}

interface Props {
  stateData: StateData;
}

const { stateData } = Astro.props;
const { state } = Astro.params;

// SEO - Title truncated to 60 chars for optimal SEO
const fullTitle = `${stateData.name} Motorcycle Accident Lawyer - Free Consultation`;
const title = fullTitle.length > 60 ? fullTitle.substring(0, 57) + '...' : fullTitle;
const description = `Injured in a motorcycle accident in ${stateData.name}? Get a free case evaluation. ${stateData.helmetLaw === "universal" ? "Helmet required for all riders." : stateData.helmetLaw === "none" ? "No helmet law." : "Partial helmet law."} ${stateData.statuteOfLimitations} statute of limitations.`;

// Schema markup
const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  "name": `${stateData.name} Motorcycle Accident Lawyers`,
  "description": description,
  "url": `https://motorcyclewrecklaw.com/states/${stateData.slug}`,
  "areaServed": {
    "@type": "State",
    "name": stateData.name,
    "containedInPlace": {
      "@type": "Country",
      "name": "United States"
    }
  },
  "serviceType": ["Motorcycle Accident Law", "Personal Injury Law"],
  "priceRange": "Free Consultation"
};

// Breadcrumbs
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "States", url: "/states" },
  { name: stateData.name, url: `/states/${stateData.slug}` }
];

// Get related states
const stateIndex = states.findIndex(s => s.slug === stateData.slug);
const relatedStates = [
  states[(stateIndex - 1 + states.length) % states.length],
  states[(stateIndex + 1) % states.length],
  states[(stateIndex + 2) % states.length],
].filter(s => s.slug !== stateData.slug);
---

<BaseLayout 
  title={title} 
  description={description}
  schemaMarkup={schemaMarkup}
  breadcrumbs={breadcrumbs}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 md:py-24">
    <div class="container-wide">
      <div class="max-w-4xl">
        <div class="flex items-center gap-2 text-gray-400 mb-4">
          <a href="/" class="hover:text-white transition">Home</a>
          <span>/</span>
          <a href="/states" class="hover:text-white transition">States</a>
          <span>/</span>
          <span class="text-white">{stateData.name}</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6">
          {stateData.name} Motorcycle Accident Lawyer
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
          Were you or a loved one injured in a motorcycle accident in {stateData.name}? 
          Get a free, no-obligation case evaluation from experienced attorneys who understand motorcycle law.
        </p>
        
        <!-- Quick Law Facts -->
        <div class="flex flex-wrap gap-4 mb-8">
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <span class="text-gray-400 text-sm">Helmet Law:</span>
            <span class="font-semibold ml-1">
              {stateData.helmetLaw === "universal" ? "ü™ñ Required for All" : 
               stateData.helmetLaw === "none" ? "No Requirement" : "Partial (Age-Based)"}
            </span>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <span class="text-gray-400 text-sm">Lane Splitting:</span>
            <span class="font-semibold ml-1">
              {stateData.laneSplitting === "legal" ? "‚úÖ Legal" : 
               stateData.laneSplitting === "gray" ? "‚ö†Ô∏è Filtering Only" : "‚ùå Illegal"}
            </span>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <span class="text-gray-400 text-sm">Filing Deadline:</span>
            <span class="font-semibold ml-1">{stateData.statuteOfLimitations}</span>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#free-case-review" class="btn btn-cta text-lg px-8 py-4">
            Get Your Free Case Review
