---
import BaseLayout from '../layouts/BaseLayout.astro';
import { states } from '../data/states';

const title = "Page Not Found | Motorcycle Wreck Law";
const description = "The page you're looking for doesn't exist. Find motorcycle accident lawyers, state laws, and free case evaluations.";

// Get featured states for navigation
const featuredStates = states.filter(s => 
  ["california", "texas", "florida", "pennsylvania", "ohio", "new-york"].includes(s.slug)
);
---

<BaseLayout title={title} description={description}>
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-20 md:py-28 min-h-[60vh] flex items-center">
    <div class="container-wide">
      <div class="max-w-3xl mx-auto text-center">
        <div class="text-8xl mb-6">üèçÔ∏è</div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6">
          <span class="text-primary-400">404</span> - Road Not Found
        </h1>
        <p class="text-xl text-gray-300 mb-8 leading-relaxed">
          Looks like you took a wrong turn. The page you're looking for doesn't exist or has been moved.
          Let's get you back on the right road.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a href="/" class="btn btn-cta text-lg px-8 py-4">
            ‚Üê Back to Home
          </a>
          <a href="/states" class="btn bg-white/10 hover:bg-white/20 border border-white/20 text-white text-lg px-8 py-4">
            Browse by State
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Navigation -->
  <section class="py-16 bg-gray-50">
    <div class="container-wide">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
        Where Would You Like to Go?
      </h2>
      
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <a href="/states" class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition group">
          <div class="text-3xl mb-4">üó∫Ô∏è</div>
          <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition mb-2">Find Lawyers by State</h3>
          <p class="text-gray-600">Browse motorcycle accident attorneys in all 50 states with state-specific law information.</p>
        </a>
        
        <a href="/cities" class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition group">
          <div class="text-3xl mb-4">üèôÔ∏è</div>
          <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition mb-2">Find Lawyers by City</h3>
          <p class="text-gray-600">Get local motorcycle accident attorneys serving your city and surrounding areas.</p>
        </a>
        
        <a href="/case-types" class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition group">
          <div class="text-3xl mb-4">‚öñÔ∏è</div>
          <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition mb-2">Case Types</h3>
          <p class="text-gray-600">Learn about different motorcycle accident case types and what compensation you may deserve.</p>
        </a>
      </div>

      <!-- Popular States -->
      <div class="bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-xl font-bold text-gray-900 mb-6">Popular States</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {featuredStates.map((state) => (
            <a 
              href={`/states/${state.slug}`}
              class="bg-gray-50 hover:bg-primary-50 rounded-lg p-4 text-center transition group"
            >
              <div class="font-semibold text-gray-900 group-hover:text-primary-600">{state.name}</div>
              <div class="text-xs text-gray-500 mt-1">{state.statuteOfLimitations} SOL</div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="container-wide">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Injured in a Motorcycle Accident?
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          Don't let a wrong turn stop you from getting help. Get a free case evaluation from experienced motorcycle accident attorneys.
        </p>
        
        <!-- Lead Capture Form -->
        <div class="bg-white rounded-xl p-6 md:p-8 text-left">
          <h3 class="text-xl font-bold text-gray-900 mb-4 text-center">Free Case Evaluation</h3>
          <form action="https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead" method="POST" class="space-y-4">
            <input type="hidden" name="source" value="motorcyclewrecklaw-404" />
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                <input type="text" name="fullName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" required />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input type="tel" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" required />
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input type="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" required />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">What Happened?</label>
              <textarea name="description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 resize-none" placeholder="Briefly describe your accident..."></textarea>
            </div>
            <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-4 px-8 rounded-lg transition text-lg">
              Get My Free Evaluation ‚Üí
            </button>
          </form>
          <p class="text-xs text-gray-500 text-center mt-4">
            üîí Your information is confidential. No fees unless you win.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Links -->
  <section class="py-12 bg-gray-100">
    <div class="container-wide">
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/blog" class="text-primary-600 hover:text-primary-700 font-medium">Blog & Resources</a>
        <span class="text-gray-300">|</span>
        <a href="/faq" class="text-primary-600 hover:text-primary-700 font-medium">FAQ</a>
        <span class="text-gray-300">|</span>
        <a href="/about" class="text-primary-600 hover:text-primary-700 font-medium">About Us</a>
        <span class="text-gray-300">|</span>
        <a href="/contact" class="text-primary-600 hover:text-primary-700 font-medium">Contact</a>
        <span class="text-gray-300">|</span>
        <a href="/resources" class="text-primary-600 hover:text-primary-700 font-medium">Resources</a>
      </div>
    </div>
  </section>
</BaseLayout>
